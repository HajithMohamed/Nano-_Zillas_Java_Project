<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Avatar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>

<VBox fx:controller="org.example.mini_project_java.Controllers.Admin.Admin_Controller"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="750.0" prefWidth="180.0">

    <AnchorPane prefHeight="750.0" prefWidth="190.0" stylesheets="@../../Styles/admin_pannell.css">

        <!-- Logo Section -->
        <VBox prefHeight="100.0" prefWidth="160.0" styleClass="logo"
              AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Avatar radius="25.0">
                <Image url="@../../Images/admin.png" />
            </Avatar>
            <Text text="Admin Pannel" styleClass="logo_Text" wrappingWidth="179.786" />
        </VBox>

        <!-- Navigation Menu -->
        <VBox layoutX="102.0" layoutY="74.0" prefHeight="400.0" prefWidth="160.0" styleClass="nav-box"
              AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <Button fx:id="userProfile" mnemonicParsing="false" text="User Profiles" />
            <Button fx:id="course" mnemonicParsing="false" text="Course" />
            <Button fx:id="notice" mnemonicParsing="false" text="Notice" />
            <Button fx:id="timetable" mnemonicParsing="false" text="Time Table" />
            <Line endX="120.0" />
            <Button mnemonicParsing="false" text="Log Out" />
            <Button fx:id="dashboard" mnemonicParsing="false" text="Admin Profile" />
        </VBox>

        <!-- Footer Section -->
        <VBox prefHeight="120.0" prefWidth="130.0" styleClass="footer-box"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <Text text="Report Suggestion / Bug?" />
            <Label text="Use this to report any Errors / suggestion" styleClass="footer-label" prefHeight="54.0" prefWidth="223.0" />
            <Button text="Report" styleClass="footer-button" prefHeight="38.0" prefWidth="54.0" />
        </VBox>

        <VBox.margin>
            <Insets right="30.0" />
        </VBox.margin>
    </AnchorPane>
</VBox>
