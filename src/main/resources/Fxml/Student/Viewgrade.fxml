        <AnchorPane layoutX="14.0" layoutY="67.0" prefHeight="510.0" prefWidth="857.0" styleClass="user_profile_Add_New_User">
            <Text layoutX="288.0" layoutY="61.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 2em; -fx-font-weight: bold;" text="View Grade Details" wrappingWidth="274.5542907714844" />

