<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Avatar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="750.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mini_project_java.Controllers.Undergraduate.Stusdent_menu_controller">
    <AnchorPane prefHeight="750.0" prefWidth="250.0" stylesheets="@../../Styles/admin_pannell.css">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
        </padding>

        <!-- Logo Section -->
        <VBox prefHeight="120.0" prefWidth="210.0" styleClass="logo" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets top="10.0" bottom="10.0" />
            </padding>
            <Avatar radius="35.0">
                <Image url="@../../Images/admin.png" />
            </Avatar>
            <Text styleClass="logo_Text" text="Student Panel" wrappingWidth="210.0" />
        </VBox>

        <!-- Navigation Menu -->
        <VBox prefHeight="450.0" prefWidth="210.0" styleClass="nav-box" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="140.0">
            <padding>
                <Insets top="10.0" bottom="10.0" />
            </padding>
            <spacing>8.0</spacing>

            <Button fx:id="studentProfile" mnemonicParsing="false" text="Update Profile" />
            <Button fx:id="studentAttendance" mnemonicParsing="false" text="View Attendance" />
            <Button fx:id="studentCourse" mnemonicParsing="false" text="View Course" />
            <Button fx:id="studentMedical" mnemonicParsing="false" text="View Medical" />
            <Button fx:id="studentGrade" mnemonicParsing="false" text="View Grade" />
            <Button fx:id="studentTimeTable" mnemonicParsing="false" text="View Time Table" />
            <Line endX="190.0" />
            <Button fx:id="studentLogout" mnemonicParsing="false" text="Log Out" />
        </VBox>

        <!-- Footer Section -->
        <VBox prefHeight="120.0" prefWidth="210.0" styleClass="footer-box" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets top="10.0" bottom="10.0" />
            </padding>
            <spacing>8.0</spacing>

            <Text text="Report Suggestion / Bug?" />
            <Label prefHeight="40.0" prefWidth="210.0" styleClass="footer-label" text="Use this to report any Errors / suggestion" />
            <Button prefHeight="35.0" prefWidth="100.0" styleClass="footer-button" text="Report" />
        </VBox>
    </AnchorPane>
</VBox>
