<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="modify_course" stylesheets="@../../Styles/User_Profiles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mini_project_java.Controllers.Lecturer.UploadMarkController">

    <Text layoutX="279.0" layoutY="31.0" styleClass="user_profile_heading" text="Update Marks" />

    <!-- Course Selection -->
    <Text layoutX="68.0" layoutY="99.0" styleClass="user_profile_Add_New_User_Label" text="Select Course:" />
    <ComboBox fx:id="courseComboBox" layoutX="180.0" layoutY="83.0" prefWidth="250.0" styleClass="user_profile_Add_New_User_Text_Field" />

    <!-- Exam Type -->
    <Text layoutX="76.0" layoutY="167.0" styleClass="user_profile_Add_New_User_Label" text="Exam Type:" />
    <ComboBox fx:id="examTypeComboBox" layoutX="187.0" layoutY="143.0" prefWidth="250.0" promptText="Select Exam Type" styleClass="user_profile_Add_New_User_Text_Field" />

    <!-- Marks Table -->
    <TableView fx:id="marksTable" layoutX="60.0" layoutY="204.0" prefHeight="300.0" prefWidth="680.0" styleClass="user_profile_Table">
        <columns>
            <TableColumn fx:id="studentIdColumn" prefWidth="200.0" text="Student ID">
                <cellValueFactory><PropertyValueFactory property="studentId" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="studentNameColumn" prefWidth="300.0" text="Student Name">
                <cellValueFactory><PropertyValueFactory property="studentName" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="marksColumn" prefWidth="180.0" text="Marks">
                <cellValueFactory><PropertyValueFactory property="marks" /></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Upload Button -->
    <Button fx:id="uploadMarksButton" layoutX="337.0" layoutY="519.0" styleClass="user_profile_Add_New_User_Button" text="Upload Marks" />
   <Text layoutX="262.0" layoutY="60.0" styleClass="user_profile_heading" text="Department of ICT" />
</AnchorPane>
