<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="modify_course" stylesheets="@../../Styles/User_Profiles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mini_project_java.Controllers.Lecturer.DisplayMedicalAttendanceController">

    <!-- Headings -->
    <Text layoutX="150.0" layoutY="40.0" styleClass="user_profile_heading" text="Undergraduate AttendanceMedical Records" />
    <Text layoutX="295.0" layoutY="75.0" styleClass="user_profile_heading" text="Department of ICT" />

    <!-- TabPane to hold Attendance and Medical Panes -->
    <TabPane fx:id="contentPane" layoutX="50.0" layoutY="108.0" prefHeight="550.0" prefWidth="750.0" tabClosingPolicy="UNAVAILABLE">
        <!-- Attendance Tab -->
        <Tab fx:id="attendanceTab" text="Attendance">
            <AnchorPane prefHeight="520.0" prefWidth="750.0">
                <!-- Search Bar -->
                <Label layoutX="10.0" layoutY="10.0" styleClass="user_profile_Add_New_User_Label" text="Search by Student ID or Name:" />
                <TextField fx:id="attendanceSearchField" layoutX="210.0" layoutY="3.0" onAction="#searchAttendance" prefHeight="34.0" prefWidth="298.0" promptText="Search by Student ID or Name" styleClass="user_profile_Add_New_User_Text_Field" />

                <!-- Attendance Table -->
                <TableView fx:id="attendanceTable" layoutX="10.0" layoutY="50.0" prefHeight="450.0" prefWidth="730.0" styleClass="user_profile_Table">
                    <columns>
                        <TableColumn fx:id="attendanceStudentIdColumn" prefWidth="120.0" text="Student ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="username" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="attendanceStudentNameColumn" prefWidth="200.0" text="Student Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="attendanceStatusColumn" prefWidth="135.19998168945312" text="Status">
                            <cellValueFactory>
                                <PropertyValueFactory property="attendanceStatus" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="attendancePercentageColumn" prefWidth="254.39996337890625" text="Attendance (%)">
                            <cellValueFactory>
                                <PropertyValueFactory property="attendancePercentage" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <placeholder>
                        <Label styleClass="table-placeholder" text="No attendance records available" />
                    </placeholder>
                </TableView>
                <!-- Browse Button -->
                <Button layoutX="546.0" layoutY="7.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="134.0" text="Browse" onAction="#browseAttendance" />
            </AnchorPane>
        </Tab>

        <!-- Medical Tab -->
        <Tab fx:id="medicalTab" text="Medical">
            <AnchorPane prefHeight="520.0" prefWidth="750.0">
                <!-- Search Bar -->
                <Label layoutX="10.0" layoutY="10.0" styleClass="user_profile_Add_New_User_Label" text="Search by Student ID or Name:" />
                <TextField fx:id="medicalSearchField" layoutX="202.0" layoutY="2.0" onAction="#searchMedical" prefHeight="34.0" prefWidth="399.0" promptText="Search by Student ID or Name" styleClass="user_profile_Add_New_User_Text_Field" />

                <!-- Medical Table -->
                <TableView fx:id="medicalTable" layoutX="10.0" layoutY="50.0" prefHeight="450.0" prefWidth="730.0" styleClass="user_profile_Table">
                    <columns>
                        <TableColumn fx:id="medicalStudentIdColumn" prefWidth="120.0" text="Student ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="studentId" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="medicalStudentNameColumn" prefWidth="200.0" text="Student Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="medicalWeekColumn" prefWidth="100.0" text="Week">
                            <cellValueFactory>
                                <PropertyValueFactory property="week" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="medicalReportColumn" prefWidth="150.0" text="Medical Report">
                            <cellValueFactory>
                                <PropertyValueFactory property="medicalReport" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="medicalStatusColumn" prefWidth="148.80002441406248" text="Status">
                            <cellValueFactory>
                                <PropertyValueFactory property="status" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <placeholder>
                        <Label styleClass="table-placeholder" text="No medical records available" />
                    </placeholder>
                </TableView>
                <!-- Browse Button -->
                <Button layoutX="530.0" layoutY="6.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="106.0" text="Browse" onAction="#browseMedical" />
            </AnchorPane>
        </Tab>
    </TabPane>

</AnchorPane>