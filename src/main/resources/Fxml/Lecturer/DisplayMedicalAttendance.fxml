<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="modify_course" stylesheets="@../../Styles/User_Profiles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mini_project_java.Controllers.Lecturer.DisplayMedicalAttendanceController">

    <!-- Headings -->
    <Text layoutX="150.0" layoutY="40.0" styleClass="user_profile_heading" text="Undergraduate Attendance &amp; Medical Records" />
    <Text layoutX="295.0" layoutY="75.0" styleClass="user_profile_heading" text="Department of ICT" />

    <!-- Left Side Fields -->
    <!-- Student ID -->
    <Text layoutX="50.0" layoutY="130.0" styleClass="user_profile_Add_New_User_Label" text="Student ID:" />
    <TextField fx:id="studentIdField" layoutX="125.0" layoutY="118.0" prefHeight="31.0" prefWidth="250.0" styleClass="user_profile_Add_New_User_Text_Field" />

    <!-- Student Name -->
    <Text layoutX="442.0" layoutY="140.0" styleClass="user_profile_Add_New_User_Label" text="Student Name:" />
    <TextField fx:id="studentNameField" layoutX="125.0" layoutY="180.0" prefWidth="200.0" styleClass="user_profile_Add_New_User_Text_Field" />

    <!-- Right Side Fields -->
    <!-- Attendance -->
    <Text layoutX="39.0" layoutY="200.0" styleClass="user_profile_Add_New_User_Label" text="Attendance:" />
    <TextField fx:id="attendanceField" layoutX="536.0" layoutY="120.0" prefWidth="200.0" styleClass="user_profile_Add_New_User_Text_Field" />

    <!-- Medical -->
    <Text layoutX="480.0" layoutY="198.0" styleClass="user_profile_Add_New_User_Label" text="Medical:" />
    <TextField fx:id="medicalField" layoutX="536.0" layoutY="180.0" prefWidth="200.0" styleClass="user_profile_Add_New_User_Text_Field" />

    <!-- Add Button -->
    <Button fx:id="addRecordButton" layoutX="690.0" layoutY="239.0" styleClass="user_profile_Add_New_User_Button" text="Add Details" />

    <!-- Table View -->
    <TableView fx:id="attendanceMedicalTable" layoutX="52.0" layoutY="310.0" prefHeight="400.0" prefWidth="750.0" styleClass="user_profile_Table">
        <columns>
            <TableColumn fx:id="studentIdColumn" prefWidth="130.0" text="Student ID">
                <cellValueFactory>
                    <PropertyValueFactory property="studentId" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="studentNameColumn" prefWidth="286.0" text="Student Name">
                <cellValueFactory>
                    <PropertyValueFactory property="studentName" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="attendanceColumn" prefWidth="153.0" text="Attendance (%)">
                <cellValueFactory>
                    <PropertyValueFactory property="attendance" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="medicalColumn" prefWidth="170.0" text="Medical Records">
                <cellValueFactory>
                    <PropertyValueFactory property="medical" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

</AnchorPane>
