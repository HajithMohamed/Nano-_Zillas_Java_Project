<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Avatar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="750.0" prefWidth="180.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mini_project_java.Controllers.Lecturer.LecturerPannelController">

    <AnchorPane prefHeight="750.0" prefWidth="190.0" stylesheets="@../../Styles/admin_pannell.css">

        <!-- Logo Section -->
        <VBox prefHeight="100.0" prefWidth="160.0" styleClass="logo" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Avatar radius="25.0">
                <Image url="@../../Images/admin.png" />
            </Avatar>
            <Text styleClass="logo_Text" text="Lecturer Pannel" wrappingWidth="179.786" />
        </VBox>

        <!-- Navigation Menu -->
        <VBox layoutX="102.0" layoutY="74.0" prefHeight="550.0" prefWidth="210.0" styleClass="nav-box" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="-30.0" AnchorPane.topAnchor="100.0">

            <Button fx:id="lecturerProfile" mnemonicParsing="false" text="My Profile" />
            <Button fx:id="manageCourses" mnemonicParsing="false" text="Manage Courses" />
            <Button fx:id="uploadMarks" mnemonicParsing="false" text="Upload Marks" />
            <Button fx:id="undergraduateDetails" mnemonicParsing="false" text="Undergraduate Details" />
            <Button fx:id="eligibility" mnemonicParsing="false" text="Eligibility Status" />
            <Button fx:id="marksGradesGPA" mnemonicParsing="false" text="Grades &amp; GPA" />
            <Button fx:id="attendanceMedical" mnemonicParsing="false" text="Attendance &amp; Medicals" />
            <Line endX="120.0" />
            <Button fx:id="logout" mnemonicParsing="false" text="Log Out" />
        </VBox>

        <!-- Footer Section -->
        <VBox prefHeight="120.0" prefWidth="210.0" styleClass="footer-box" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="-30.0">

            <Text text="Report Suggestion / Bug?" />
            <Label prefHeight="49.0" prefWidth="197.0" styleClass="footer-label" text="Use this to report any Errors / suggestion" />
            <Button prefHeight="38.0" prefWidth="54.0" styleClass="footer-button" text="Report" />
        </VBox>

        <VBox.margin>
            <Insets right="30.0" />
        </VBox.margin>
    </AnchorPane>
</VBox>
